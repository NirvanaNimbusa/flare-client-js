{
    "include": ["**/*"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "declaration": true
    }
}
