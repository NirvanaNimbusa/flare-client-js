{
    "version": "1.0.0",
    "name": "flare-client-js",
    "license": "ISC",
    "scripts": {
        "tswatch": "tsc --watch --noEmit",
        "prettier": "prettier --write '*.{js,ts,json}' 'packages/**/*.{js,ts,json}'",
        "eslint": "eslint packages --fix --ext ts",
        "format": "$npm_execpath run eslint && $npm_execpath run prettier",
        "upgrade-all": "yarn upgrade && lerna run upgrade-deps",
        "install-deps": "yarn && lerna run install-deps",
        "build": "lerna run build",
        "link-all": "lerna run run-link",
        "link-client": "lerna run link-client",
        "setup-all-packages": "$npm_execpath install-deps && $npm_execpath build && $npm_execpath link-all && $npm_execpath link-client"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/plugin-proposal-optional-chaining": "^7.6.0",
        "@babel/polyfill": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.2",
        "@typescript-eslint/parser": "^2.3.2",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "bundlesize": "^0.17.1",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.3.0",
        "husky": "^3.0.8",
        "lerna": "^3.13.1",
        "lint-staged": "^8.1.5",
        "prettier": "^1.16.4",
        "size-limit": "^1.0.1",
        "typescript": "^3.7.0-beta",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-merge": "^4.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,ts,json}": [
                "prettier --write",
                "git add"
            ]
        },
        "ignore": [
            "**/dist/**"
        ]
    },
    "dependencies": {}
}
